# Truth Core Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Configuration
# ============================================================================

# API key for authentication (required for production)
# Generate with: openssl rand -hex 32
TRUTHCORE_API_KEY=your-api-key-here

# Server port (default: 8080)
TRUTHCORE_PORT=8080

# Debug mode (set to true for development)
TRUTHCORE_DEBUG=false

# ============================================================================
# Cache Configuration
# ============================================================================

# Cache directory path (default: .truthcache)
TRUTHCORE_CACHE_DIR=.truthcache

# Enable/disable cache
TRUTHCORE_CACHE_ENABLED=true

# Maximum cache age in days (for compact command)
TRUTHCORE_CACHE_MAX_AGE_DAYS=30

# ============================================================================
# Security Configuration
# ============================================================================

# CORS allowed origins (comma-separated, or * for all in development)
# Example: https://app.example.com,https://admin.example.com
TRUTHCORE_CORS_ORIGINS=*

# Rate limiting: max requests per window
TRUTHCORE_RATE_LIMIT_MAX=100

# Rate limiting: window in seconds
TRUTHCORE_RATE_LIMIT_WINDOW=60

# Maximum file upload size in MB
TRUTHCORE_MAX_UPLOAD_SIZE_MB=100

# Request timeout in seconds
TRUTHCORE_REQUEST_TIMEOUT=30

# ============================================================================
# Redis Configuration (Optional - for distributed rate limiting)
# ============================================================================

# Redis URL for distributed rate limiting
# Format: redis://username:password@host:port/db
# Leave empty to use in-memory rate limiting
TRUTHCORE_REDIS_URL=

# Redis connection timeout
TRUTHCORE_REDIS_TIMEOUT=5

# ============================================================================
# Signing Configuration
# ============================================================================

# Path to Ed25519 private key for evidence signing
# Generate with: truthctl generate-keys
TRUTHCORE_SIGNING_KEY_PATH=

# Path to public key for verification
TRUTHCORE_SIGNING_PUBLIC_KEY_PATH=

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
TRUTHCORE_LOG_LEVEL=INFO

# Log format: json, text
TRUTHCORE_LOG_FORMAT=json

# Structured logging output file (optional)
TRUTHCORE_LOG_FILE=

# ============================================================================
# Parquet History (Optional)
# ============================================================================

# Enable Parquet storage for history
TRUTHCORE_PARQUET_ENABLED=false

# Parquet storage directory
TRUTHCORE_PARQUET_DIR=.truthparquet

# ============================================================================
# Integration Configuration
# ============================================================================

# JobForge API endpoint (for JobForge integration)
TRUTHCORE_JOBFORGE_URL=

# JobForge API key
TRUTHCORE_JOBFORGE_API_KEY=

# Webhook URL for notifications
TRUTHCORE_WEBHOOK_URL=

# ============================================================================
# Development Only
# ============================================================================

# Enable auto-reload (development only)
TRUTHCORE_RELOAD=false

# Silence certain warnings
PYTHONWARNINGS=ignore::DeprecationWarning
