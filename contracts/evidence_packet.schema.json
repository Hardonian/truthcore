{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/evidence_packet.schema.json",
  "title": "Truth Core Evidence Packet",
  "description": "Schema for evidence packets that bundle verification artifacts with provenance",
  "type": "object",
  "required": ["packet_version", "packet_id", "created_at", "artifacts"],
  "additionalProperties": false,
  "properties": {
    "packet_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of the evidence packet schema"
    },
    "packet_id": {
      "type": "string",
      "description": "Unique identifier for this evidence packet"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of packet creation"
    },
    "source": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "commit_sha": { "type": "string" },
        "branch": { "type": "string" },
        "ci_run_id": { "type": "string" },
        "ci_provider": { "type": "string" }
      },
      "additionalProperties": false
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "path", "content_hash"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["verdict", "readiness", "manifest", "log", "report"]
          },
          "path": { "type": "string" },
          "content_hash": { "type": "string" },
          "contract_version": { "type": "string" },
          "size_bytes": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "chain": {
      "type": "object",
      "description": "Chain of custody information",
      "properties": {
        "previous_packet_id": { "type": "string" },
        "previous_packet_hash": { "type": "string" },
        "sequence_number": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "string",
      "description": "Ed25519 signature of the packet contents"
    },
    "content_hash": {
      "type": "string",
      "description": "Hash of the entire packet for integrity verification"
    }
  }
}
