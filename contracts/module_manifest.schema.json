{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/module_manifest.schema.json",
  "title": "Truth Core Module Manifest",
  "description": "Schema for run manifests that track provenance and content hashes",
  "type": "object",
  "required": ["manifest_version", "run_id", "created_at", "inputs", "outputs"],
  "additionalProperties": false,
  "properties": {
    "manifest_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of this manifest schema"
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this run"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of run creation"
    },
    "truthcore_version": {
      "type": "string",
      "description": "Version of truth-core used"
    },
    "profile": {
      "type": "string",
      "description": "Verification profile used"
    },
    "mode": {
      "type": "string",
      "description": "Execution mode"
    },
    "inputs": {
      "type": "object",
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/file_entry"
          }
        },
        "content_hash": {
          "type": "string",
          "description": "Combined hash of all input files"
        }
      },
      "additionalProperties": false
    },
    "outputs": {
      "type": "object",
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/file_entry"
          }
        },
        "verdict_hash": {
          "type": "string",
          "description": "Content hash of the verdict output"
        }
      },
      "additionalProperties": false
    },
    "engines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "duration_ms": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total run duration in milliseconds"
    },
    "cache_hit": {
      "type": "boolean",
      "description": "Whether this result was served from cache"
    },
    "signature": {
      "type": "string",
      "description": "Ed25519 signature of the manifest"
    }
  },
  "definitions": {
    "file_entry": {
      "type": "object",
      "required": ["path", "hash"],
      "properties": {
        "path": { "type": "string" },
        "hash": { "type": "string" },
        "algorithm": {
          "type": "string",
          "enum": ["blake2b", "sha256", "sha3"],
          "default": "blake2b"
        },
        "size_bytes": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    }
  }
}
