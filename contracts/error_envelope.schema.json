{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/error_envelope.schema.json",
  "title": "Truth Core Error Envelope",
  "description": "Typed error envelope for structured error responses across truth-core",
  "type": "object",
  "required": ["error"],
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]+$",
          "description": "Machine-readable error code (e.g., VALIDATION_FAILED, SCHEMA_NOT_FOUND)"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field", "reason"],
            "properties": {
              "field": { "type": "string" },
              "reason": { "type": "string" },
              "value": {}
            },
            "additionalProperties": false
          },
          "description": "Field-level error details"
        },
        "artifact_type": {
          "type": "string",
          "description": "Artifact type that caused the error"
        },
        "contract_version": {
          "type": "string",
          "description": "Contract version that caused the error"
        },
        "request_id": {
          "type": "string",
          "description": "Request ID for correlation"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of the error"
        },
        "retryable": {
          "type": "boolean",
          "default": false,
          "description": "Whether this error is retryable"
        },
        "docs_url": {
          "type": "string",
          "format": "uri",
          "description": "URL to documentation about this error"
        }
      }
    }
  }
}
