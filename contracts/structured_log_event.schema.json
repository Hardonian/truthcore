{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/structured_log_event.schema.json",
  "title": "Truth Core Structured Log Event",
  "description": "Schema for structured log events emitted by truth-core",
  "type": "object",
  "required": ["timestamp", "level", "event"],
  "additionalProperties": true,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "level": {
      "type": "string",
      "enum": ["debug", "info", "warning", "error", "critical"],
      "description": "Log level"
    },
    "event": {
      "type": "string",
      "description": "Event name or message"
    },
    "logger": {
      "type": "string",
      "description": "Logger name (module path)"
    },
    "run_id": {
      "type": "string",
      "description": "Associated run ID for correlation"
    },
    "engine": {
      "type": "string",
      "description": "Engine that produced this event"
    },
    "phase": {
      "type": "string",
      "enum": ["init", "collect", "analyze", "score", "finalize"],
      "description": "Execution phase"
    },
    "duration_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Duration of the operation in milliseconds"
    },
    "error": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" },
        "stack": { "type": "string" }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "description": "Additional context key-value pairs",
      "additionalProperties": true
    }
  }
}
