{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/verdict/v1.0.0/verdict.schema.json",
  "title": "Truth Core Verdict",
  "description": "Aggregated judgment from multiple truth-core engines",
  "type": "object",
  "required": ["_contract", "verdict", "score", "findings"],
  "additionalProperties": true,
  "properties": {
    "_contract": {
      "type": "object",
      "required": ["artifact_type", "contract_version", "truthcore_version", "created_at", "schema"],
      "properties": {
        "artifact_type": {
          "type": "string",
          "const": "verdict"
        },
        "contract_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "truthcore_version": {
          "type": "string"
        },
        "engine_versions": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "schema": {
          "type": "string"
        }
      }
    },
    "verdict": {
      "type": "string",
      "enum": ["PASS", "FAIL", "WARN", "UNKNOWN"]
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "findings": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/finding"
      }
    },
    "metadata": {
      "type": "object"
    },
    "engine_outputs": {
      "type": "object"
    }
  },
  "definitions": {
    "finding": {
      "type": "object",
      "required": ["id", "severity", "message"],
      "properties": {
        "id": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["BLOCKER", "HIGH", "MEDIUM", "LOW", "INFO"]
        },
        "message": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "engine": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      }
    }
  }
}
